            </manifest>
            <fileset dir="../bin"/>
          	<zipfileset excludes="META-INF/*.SF" src="../demonstrationServer/mail.jar"/>
        </jar>
        
        <jar destfile="SampleClient.jar" filesetmanifest="mergewithoutmain">
